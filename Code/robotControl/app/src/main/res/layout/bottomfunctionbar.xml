<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/set_icon"
            android:background="@drawable/seticon"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/function_icon"
            android:background="@drawable/functionicon"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <RelativeLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <GridLayout
                android:layout_centerInParent="true"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/controller_up"
                    android:background="@drawable/up"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_row="0"/>

                <Button
                    android:id="@+id/controller_down"
                    android:background="@drawable/down"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_row="2"/>

                <Button
                    android:id="@+id/controller_left"
                    android:background="@drawable/left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_row="1"/>

                <Button
                    android:id="@+id/controller_right"
                    android:background="@drawable/right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="2"
                    android:layout_row="1"/>

            </GridLayout>

        </RelativeLayout>

        <include layout="@layout/specificinfo" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/specific_icon"
            android:background="@drawable/specificicon"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/close_specific_icon"
            android:background="@drawable/closespecificicon"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/controller_icon"
            android:background="@drawable/controllericon"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />


    </LinearLayout>

</LinearLayout>